
@{
    ViewData["Title"] = "Index";
}

<h1>Category
    <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-dark">Create</a>

</h1>
<partial name="_Notification" />
<table class="table">
    <tr>
        <th>Name</th>
        <th>DisplayOrder</th>
        <th></th>

    </tr>
   @foreach(var items in Model)
    {
        <tr>
            <td>
                @items.Name
            </td>
            <td>
                @items.DisplayOrder
            </td>
            <td>
                <a asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-id="@items.Id">Update</a>
                <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@items.Id">Delete</a>
            </td>
        </tr>
    }

</table>

